{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MirrorShard 2",
  "version": "0.1.0",
  "identifier": "com.DroicheadNua.mirrorshard2",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "mirrorshard-ver02",
        "visible": false,
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "closable": true,
        "maximizable": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "MirrorShard CLI",
      "args": [
        {
          "name": "filePath",
          "index": 1,
          "description": "Path to the file to open.",
          "takesValue": true,
          "required": false
        }
      ]
    }
  },
  "bundle": {
    "fileAssociations": [
      {
        "ext": [
          "md",
          "txt"
        ],
        "name": "Text Document",
        "role": "Editor"
      }
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "docs/*"
    ],
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    },
    "macOS": {
      "dmg": {
        "windowSize": {
          "width": 800,
          "height": 600
        }
      }
    },
    "linux": {
      "deb": {
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}